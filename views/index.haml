#page
  #about
    #about-content
      %h1
        = image_tag "logo.png", :alt => "Open City"
    
      %h2
        Building a better Chicago
      
      #about-primary
        %p
          Open City is a new civic startup. We build open gov and open source apps to make cities work better. Interested in getting involved or supporting us? Get in touch at
          = link_to "opencityapps@gmail.com", "mailto:opencityapps@gmail.com"
        %p
          = link_to "Follow us on Twitter", "http://www.twitter.com/opencityapps", :class => "icon-twitter"
      
      #about-secondary
        %script{:charset => "utf-8", :src => 'http://widgets.twimg.com/j/2/widget.js'}
        :javascript
          new TWTR.Widget({
            version: 2,
            type: 'profile',
            rpp: 1,
            interval: 30000,
            width: 'auto',
            height: 300,
            theme: {
              shell: {
                background: '#333333',
                color: '#ffffff'
              },
              tweets: {
                background: '#000000',
                color: '#ffffff',
                links: '#4aed05'
              }
            },
            features: {
              scrollbar: false,
              loop: false,
              live: false,
              behavior: 'all'
            }
          }).render().setUser('opencityapps').start();
  
